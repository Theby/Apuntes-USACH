    <section id="title" class="shinyOrange">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1>
              <strong>Nombre:</strong>
              <%= @publicacion.nombre %>
            </h1>
          </div>
        </div>
      </div>
    </section>


    <section id="body" class="officialGrey">
      <div class="container allWhite">
        <p id="notice"><%= notice %></p>
        <p>
          <strong>Siglas:</strong>
          <%= @publicacion.siglas %>
        </p>

        <p>
          <strong>LinkMD:</strong>
          <%= @publicacion.linkMD %>
        </p>

        <p>
          <strong>Year:</strong>
          <%= @publicacion.year %>
        </p>

        <p>
          <strong>Semestre:</strong>
          <%= @publicacion.semestre %>
        </p>

        <p>
          <strong>Section:</strong>
          <% if !@publicacion.section.blank? %>
          	<%= @publicacion.section.nombre %>
          <% else %>
          	Sin Section asignada
          <% end %>
        </p>    

        <%= link_to 'Edit', edit_publicacion_path(@publicacion), :class => "btn btn-warning" %> |
        <%= link_to 'Back', create_publicacion_path(@publicacion.section), :class => "btn btn-warning" %>
        <br><br>
      </div>
    </section>

    <section id="footer" class="officialGrey">
      <div class="container">
        <div class="panel panel-success">         
          <div class="panel-heading">
            <h3 class="panel-title" align="center"> Desarrollado por Esteban Gaete Flores </h3>
          </div>
        </div>
      </div>
    </section>
