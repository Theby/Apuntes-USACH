<p id="notice"><%= notice %></p>

    <section id="title">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h3>
              <strong>Nombre:</strong>
              <%= @publicacion.nombre %>
            </h3>
          </div>
        </div>
      </div>
    </section>


    <section id="body">
      <div class="container">
        <p>
          <strong>Year:</strong>
          <%= @publicacion.year %>
        </p>

        <p>
          <strong>Semestre:</strong>
          <%= @publicacion.semestre %>
        </p>

        <p>
          <strong>Section:</strong>
          <% if !@publicacion.section.blank? %>
          	<%= @publicacion.section.nombre %>
          <% else %>
          	Sin Section asignada
          <% end %>
        </p>

        <%= link_to 'Edit', edit_publicacion_path(@publicacion), :class => "btn btn-link" %> |
        <%= link_to 'Back', publicacions_path, :class => "btn btn-link" %>
      </div>
    </section>

    <section id="footer">
      <div class="container navbar-fixed-bottom">
        <div class="panel panel-success">         
          <div class="panel-heading">
            <h3 class="panel-title" align="center"> Desarrollado por Esteban Gaete Flores </h3>
          </div>
        </div>
      </div>
    </section>
