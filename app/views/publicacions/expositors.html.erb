        <section id="title" class="shinyOrange">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h1><%= @publicacion.nombre %></h1>
                        <p>
                            <%= @publicacion.siglas %> - <%= @publicacion.linkMD %>
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section id="body" class="officialGrey">
            <div class="container allWhite">

                <%= link_to new_expositor_path(@publicacion), class: "btn btn-success", "role" => "button" do %>
                  Nuevo Expositor <span class="badge"> <%= @publicacion.expositors.count %></span>
                <% end %>       

                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>Publicacion</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @publicacion.expositors.order("id ASC").each do |expositor| %>
                        <tr>
                          <td><%= expositor.nombre %></td>
                          <td>
                            <% if !expositor.publicacion.blank? %>
                              <%= expositor.publicacion.nombre %>
                            <% else %>
                              No hay publicaci√≥n asignada.
                            <% end %>
                          </td>
                          <td><%= link_to 'Show', expositor, :class => "btn btn-warning" %></td>
                          <td><%= link_to 'Edit', edit_expositor_path(expositor), :class => "btn btn-warning" %></td>
                          <td><%= link_to 'Destroy', expositor, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>          
                </div>            

                <%= link_to 'Back', create_publicacion_path(@publicacion.section), :class => "btn btn-warning" %>

                <br><br>
            </div>
        </section>

        <section id="footer" class="officialGrey">
            <div class="container">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title" align="center"> Desarrollado por Esteban Gaete Flores </h3>
                    </div>
                </div>
            </div>
        </section>