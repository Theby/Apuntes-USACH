						            	<%= link_to apuntes_pingeso_path do %><%= t('ramos.pingeso') %> <span class="glyphicon glyphicon-chevron-right"></span><% end %>
						                <ul id="sub-menu2_4" class="dropdown-menu sub-menu">
						                    <li><%= link_to "Clase 1 - Conceptos Importantes", apuntes_pingeso_pingeso_c1_path %></li>
						                    <li><%= link_to "Clase 2 - Metodología RUP", apuntes_pingeso_pingeso_c2_path %></li>
